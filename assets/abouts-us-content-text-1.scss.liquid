/*
*===================================================
* MOBILE                                            
*===================================================
*/
#content-text-1 {
  padding: 15px 0;
  .content {
    p {
      font-family: Futura;
      letter-spacing: 0.025em;
      font-size: 18px;
      font-weight: 400;
      color: rgb(0, 0, 0);
      padding: 15px;
      text-align: left;
    }
  }
}

/*
*===================================================
* IPAD                                           
*===================================================
*/
@media (min-width: 768px) {
  #content-text-1 {
    padding: 15px;
    .content {
      padding: 20px;
      p {
        font-family: Futura;
        letter-spacing: 0.025em;
        font-size: 18px;
        font-weight: 400;
        color: rgb(0, 0, 0);
        text-align: center;
      }
    }
  }
}
/*
*===================================================
* DESKTOP                                        
*===================================================
*/
@media (min-width: 1025px) {
  #content-text-1 {
    padding: 15px;
    .content {
      p {
        font-family: Futura;
        letter-spacing: 0.025em;
        font-size: 18px;
        font-weight: 400;
        color: rgb(0, 0, 0);
        padding: 30px;
      }
    }
  }
}
