/*
*===================================================
* MOBILE                                      
*===================================================
*/
.products {
  padding: 0 15px;
  max-width: 1300px;
  margin: auto;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-row-gap: 20px;

  .product-item {
    .product-item-image {
      position: relative;
      .image-primary {
        transition: all 0.3s ease-in-out;
        padding: 0 7px;
      }
      .image-secondary {
        position: absolute;
        padding: 0 7px;
        top: 20;
        opacity: 0;
        transition: all 0.3s ease-in-out;
      }

      .product-item-quickshop {
        position: absolute;
        bottom: 0;
        opacity: 0;
        left: 0;
        right: 0;
        padding: 0 30px 20px;
        background-color: hsla(0, 0%, 100%, 0.5);
        transition: all 0.3s ease-in-out;

        .product-item-options {
          margin: 15px 0;
          font-size: 0.8em;
          display: flex;
          justify-content: center;
          grid-column-gap: 20px;
          button {
            background: transparent;
            box-shadow: none;
          }
        }

        .button-add-to-bag {
          outline: none;
          border: 0;
          color: #fff;
          background-color: #000;
          width: 100%;
          padding: 0.8em;
          font-size: 0.8em;
          &:focus {
            box-shadow: none;
          }
        }
      }
    }

    .product-link {
      display: flex;
      flex-direction: column;
      padding: 20px 0 0;
      text-align: center;
      .product-name {
        margin-top: 20px;
        margin-bottom: 0;
        p {
          color: #000;
          font-size: 0.9rem;
        }
      }
      .product-price {
        margin-top: 10px;
        p {
          color: #000;
          font-size: 0.75rem;
        }
      }
    }
  }
}

/*
*===================================================
* IPAD                                       
*===================================================
*/
@media (min-width: 768px) {
  .products {
    padding: 0;
    grid-template-columns: repeat(3, 1fr);
    grid-row-gap: 20px;

    .product-item {
      .product-item-image {
        position: relative;
        .image-primary {
          transition: all 0.3s ease-in-out;
          padding: 0 15px;
        }
        .image-secondary {
          position: absolute;
          padding: 0 15px;
          top: 20;
          opacity: 0;
          transition: all 0.3s ease-in-out;
        }

        .product-item-quickshop {
          position: absolute;
          bottom: 0;
          opacity: 0;
          left: 0;
          right: 0;
          padding: 0 30px 20px;
          background-color: hsla(0, 0%, 100%, 0.5);
          transition: all 0.3s ease-in-out;

          .product-item-options {
            margin: 15px 0;
            font-size: 0.8em;
            display: flex;
            justify-content: center;
            grid-column-gap: 15px;
            padding: 3px;
            .enabled {
              background: transparent;
              box-shadow: none;
              color: #000;
              padding: 0 6px;
              &:focus {
                box-shadow: 0 0 0 1px black;
              }
            }

            .disabled {
              cursor: not-allowed;
              position: relative;
              &:focus {
                box-shadow: 0 0 0 1px black;
              }
              span {
                &:before {
                  content: "";
                  position: absolute;
                  left: 0;
                  right: 0;
                  bottom: 0;
                  top: 0;
                  background: linear-gradient(
                    to bottom right,
                    transparent calc(50% - 1px),
                    rgba(0, 0, 0, 0.2) calc(50% - 1px),
                    rgba(0, 0, 0, 0.2) 50%,
                    transparent 0
                  );
                }

                &:after {
                  content: "";
                  position: absolute;
                  left: 0;
                  right: 0;
                  bottom: 0;
                  top: 0;
                  background: linear-gradient(
                    to bottom left,
                    transparent calc(50% - 1px),
                    rgba(0, 0, 0, 0.2) calc(50% - 1px),
                    rgba(0, 0, 0, 0.2) 50%,
                    transparent 0
                  );
                }
              }
            }
          }

          .button-add-to-bag {
            outline: none;
            border: 0;
            color: #fff;
            background-color: #000;
            width: 100%;
            padding: 0.8em;
            font-size: 0.8em;
            &:focus {
              box-shadow: none;
            }
          }
        }

        &:hover {
          .image-primary {
            opacity: 0;
          }
          .image-secondary {
            opacity: 1;
          }
          .product-item-quickshop {
            opacity: 1;
          }
        }
      }

      .product-link {
        .product-name {
          margin-top: 25px;
          margin-bottom: 0;
          p {
            color: #000;
            font-size: 0.9rem;
          }
        }
        .product-price {
          margin-top: 10px;
          p {
            color: #000;
            font-size: 0.75rem;
          }
        }
      }
    }
  }
}

