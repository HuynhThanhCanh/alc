/*
*===================================================
* MOBILE                                            
*===================================================
*/
#content-text-2 {
  padding: 15px 0;
  .content {
    p {
      font-family: Futura;
      letter-spacing: 0.025em;
      font-size: 24px;
      font-weight: 400;
      color: rgb(0, 0, 0);
      text-align: center;
      line-height: 2;
      width: 80%;
      margin: auto;
      padding: 10px;
    }
  }
}

/*
*===================================================
* IPAD                                           
*===================================================
*/
@media (min-width: 768px) {
  #content-text-2 {
    padding: 15px;
    .content {
      padding: 0;
      p {
        font-family: Futura;
        letter-spacing: 0.025em;
        font-size: 24px;
        font-weight: 400;
        color: rgb(0, 0, 0);
        padding: 15px;
        text-align: center;
        padding: 0;
        margin: 0 40px 15px 40px;
        line-height: 2;
        margin: auto;
      }
    }
  }
}
/*
*===================================================
* DESKTOP                                        
*===================================================
*/
@media (min-width: 1025px) {
  #content-text-2 {
    padding: 0;
    .content {
      padding: 0;
      p {
        font-family: Futura;
        letter-spacing: 0.025em;
        font-size: 24px;
        font-weight: 400;
        color: rgb(0, 0, 0);
        margin: 0 114px 15px 114px;
      }
    }
  }
}
