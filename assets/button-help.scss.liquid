button {
  outline: none;
  border: 0;

  &:focus {
    box-shadow: inset 0 0 0 0.21429rem rgba(255, 255, 255, 0.4);
  }
}

.button {
  font-family: inherit;
  font-size: 15px;
  font-weight: 700;
  color: white;
  background-color: #02080c;
  border-radius: 999rem;
  padding: 10px 20px;
  width: max-content;
  position: fixed;
  bottom: 0;
  right: 15px;
  letter-spacing: 1px;
}
